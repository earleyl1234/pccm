@using PCCM.Web.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@UIStrings.WebTitle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
</head>
<body>
    <div class="top-banner">
        <div class="banner-text">
            <h1>@UIStrings.WebTitle</h1>
        </div>
        <a class="scrolldown" href="#content"><span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></a>
    </div>
    <div id="navbar" class="navbar navbar-inverse navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(UIStrings.ShortWebTitle, "Index", "Home", null, new {@class = "navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(UIStrings.Home, "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UIStrings.Programs & @UIStrings.Services <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Rental of Facility</a></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1">Employment Support</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Professionals</a></li>
                                    <li><a href="#">Skilled Worker</a></li>
                                    <li class="dropdown-submenu">
                                        <a tabindex="-1">Programs</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Mentorship</a></li>
                                            <li><a href="#">Practicum Opportunities</a></li>
                                            <li><a href="#">Job Search Workshops</a></li>
                                            <li><a href="#">Canadian Work Experience</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li><a href="#">Business Start-Up & Settlement</a></li>
                            <li><a href="#">Walk-In Counseling</a></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1">Language Training</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Spoken Tagalog</a></li>
                                    <li><a href="#">English for General Purposes</a></li>
                                </ul>
                            </li>
                            <li><a href="#">Filipino Seniors Project</a></li>
                            <li><a href="#">Child Minding Services</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UIStrings.Volunteering & @UIStrings.Membership <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Volunteer Opportunities</a></li>
                            <li><a href="#">Volunteer Stories and Testimonies</a></li>
                            <li class="dropdown-submenu">
                                <a tabindex="-1">Application Forms</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Volunteers</a></li>
                                    <li><a href="#">Membership - Individual & Affiliates</a></li>
                                    <li><a href="#">Nomination for Board of Director</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UIStrings.Media <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Video</a></li>
                            <li><a href="#">Gallery</a></li>
                            <li><a href="#">Event's Reports</a></li>
                        </ul>
                    </li>

                    @*<li>@Html.ActionLink(UIStrings.Contact, "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="content" class="container body-content">
        @RenderBody()
    </div>
<footer class="footer-container">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h4>@UIStrings.About</h4>
                <ul>
                    <li><a href="@Url.Action("Index","About")#mission">@UIStrings.MissionAndValues</a></li>
                    <li><a href="@Url.Action("Index","About")#officers">@UIStrings.Officers</a></li>
                    <li><a href="@Url.Action("Index","About")#staffs">@UIStrings.Staffs</a></li>
                    <li><a href="@Url.Action("Index","About")#membership">@UIStrings.Membership</a></li>
                    <li><a href="@Url.Action("Index","About")#founders">@UIStrings.Founders</a></li>
                    <li><a href="@Url.Action("Index","About")#sponsors">@UIStrings.Sponsors & @UIStrings.Donors</a></li>
                    <li><a href="@Url.Action("Index","About")#affiliates">@UIStrings.Affiliates</a></li>
                    <li><a href="@Url.Action("Index","About")#confidentiality">@UIStrings.Confidentiality & @UIStrings.CoIA</a></li>
                    <li><a href="@Url.Action("Index","About")#privacy">@UIStrings.PrivacyPolicy</a></li>
                    <li><a href="@Url.Action("Index","About")#accessibility">@UIStrings.Accessibility</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4>@UIStrings.Contacts</h4>
            </div>
            <div class="col-md-4">
                <h4>@UIStrings.Resources</h4>
                <ul>
                    <li><a href="#">@UIStrings.AnnualReport</a></li>
                    <li><a href="#">@UIStrings.Constitution & @UIStrings.ByLaws</a></li>
                    <li><a href="#">@UIStrings.JobSearch</a></li>
                    <li><a href="#">@UIStrings.HousingInformation</a></li>
                    <li><a href="#">@UIStrings.HistortyOfPCCM</a></li>
                    <li><a href="#">@UIStrings.UsefulLinks</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="text-center">
                    Copyright &copy; @(DateTime.Now.Year.ToString() != "2016" ? $"2016 - {DateTime.Now.Year}"
                                           : $"{DateTime.Now.Year}") by @UIStrings.DeveloperName1. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

